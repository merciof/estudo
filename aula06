<!doctype html>
<html ng-app>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
  </head>
  <body>
    
  <!-- root model: pode ser acessado de qualquer controlador-->
  Busca: <input type="text" ng-model="modelo01">
  
  <div ng-controller="controladorLista">
  
    <ul>
      <li ng-repeat="pessoa in pessoas | filter:modelo01">
      
        {{pessoa.nome}}, {{pessoa.cidade}} 
      
      </li>
      
      <hr>
    
      <li ng-repeat="fruta in frutas | filter:modelo01">
      
        {{fruta}}
      
      </li>
    </ul>
   
   <hr>
   <div>
    Nome: <input type="text" ng-model="modelo02">
    <br>
    <br>
    Cidade: <input type="text" ng-model="modelo03">
    <br>
    <br>
    <button ng-click="adicionar()">Adicionar a lista: </button>
   
   </div>
  
  
  </div>
  
  <script>
    
    var controladorLista = function ($scope) {
      
      $scope.pessoas = [
        
        {nome:"Maria", cidade:"Recife"},
        {nome:"João", cidade:"Olinda"},
        {nome:"Ana", cidade:"Jaboatão"},
        {nome:"Severina", cidade:"Abreu e Lima"}
        
        ]; 
      
      $scope.frutas = ['banana', 'maça', 'uva', 'pera', 'mamão', 'graviola'];
      
      $scope.adicionar = function() {
        $scope.pessoas.push({
          nome: $scope.modelo02,
          cidade: $scope.modelo03
        });
      
        $scope.modelo03 = "";
        $scope.modelo02 = "";
        
      };
    
    };
  
  </script>
  
  </body>
</html>
