  <body>
    
  <div ng-controller="controladorLista">
  
    <ul>
      <li ng-repeat="pessoa in pessoas">
      
        {{pessoa.nome}}, {{pessoa.cidade}} 
      
      </li>
      
      <hr>
    
      <li ng-repeat="fruta in frutas">
      
        {{fruta}}
      
      </li>
    
    
    </ul>
  
  </div>
  
  <script>
    
    var controladorLista = function ($scope) {
      
      $scope.pessoas = [
        
        {nome:"Maria", cidade:"Recife"},
        {nome:"João", cidade:"Olinda"},
        {nome:"Ana", cidade:"Jaboatão"},
        {nome:"Severina", cidade:"Abreu e Lima"}
        
        ]; 
      
      $scope.frutas = ['banana', 'maça', 'uva', 'pera', 'mamão', 'graviola'];
      
      
      
    };
  
  </script>
  
