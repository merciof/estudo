    <div ng-controller="controlador01">
     
     {{nome}} {{sobrenome}} {{idade}} {{cidade}} {{estado}} {{pais}}
    </div>
    
    <div ng-controller="controlador02">
      <label>Nome:</label> <input type="text" ng-model="modeloDados01">
      <hr>
     {{modeloDados01}} {{sobrenome}} {{idade}} {{cidade}} {{estado}} {{pais}}
    </div>
  
    <script>
        var controlador01 = function () {
    

    
        };
        
        var controlador02 = function ($scope) {
    
             var x = 0;
          $scope.nome = "Joao";
          $scope.sobrenome = "Silva";
          $scope.idade = "30";
          $scope.cidade = "Recife";
          $scope.estado = "Pernambuco";
          $scope.pais = "Brasil";
          <!--A cada modificação do modeloDados01 a função abaixo é executada -->
          $scope.$watch ('modeloDados01', function() {
            x++;
            console.log( 'alteração ' + x);
          });
    
        };
  
    
    </script>
